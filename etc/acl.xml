<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Akeneo_Connector::config_akeneo_connector" title="Akeneo Connector Section" translate="title" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::system">
                    <resource id="Akeneo_Connector::akeneo_connector" title="Akeneo Connector Api" sortOrder="100" translate="title">
                        <resource id="Akeneo_Connector::import" title="Import API" sortOrder="10" translate="title">
                            <resource id="Akeneo_Connector::import_category" title="Categories" sortOrder="10" translate="title" />
                            <resource id="Akeneo_Connector::import_family" title="Families" sortOrder="20"  translate="title" />
                            <resource id="Akeneo_Connector::import_attribute" title="Attributes" sortOrder="30" translate="title" />
                            <resource id="Akeneo_Connector::import_option" title="Options" sortOrder="40" translate="title" />
                            <resource id="Akeneo_Connector::import_product_model" title="Variants" sortOrder="50" translate="title" />
                            <resource id="Akeneo_Connector::import_family_variant" title="Family Variant" sortOrder="60" translate="title" />
                            <resource id="Akeneo_Connector::import_product" title="Products" sortOrder="70" translate="title" />
                        </resource>
                        <resource id="Akeneo_Connector::akeneo_connector_log" title="Log" sortOrder="20" translate="title" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
