<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <akeneo_connector>
            <akeneo_api>
                <base_url>http://demo.akeneo.com/</base_url>
                <username>admin</username>
                <client_id>1_demo_client_id</client_id>
                <client_secret>demo_secret</client_secret>
                <pagination_size>100</pagination_size>
                <edition>less_four_point_zero_point_sixty_two</edition>
            </akeneo_api>
            <products_filters>
                <mode>standard</mode>
                <completeness_type>=</completeness_type>
                <completeness_value>100</completeness_value>
                <status>1</status>
                <updated_mode>SINCE LAST N DAYS</updated_mode>
                <model_completeness_type>no_condition</model_completeness_type>
            </products_filters>
            <product>
                <url_generation_enabled>1</url_generation_enabled>
                <activation>2</activation>
                <association_related>SUBSTITUTION</association_related>
                <association_upsell>UPSELL</association_upsell>
                <association_crossell>X_SELL</association_crossell>
            </product>
            <filter_attribute>
                <filter_attribute_code_mode>0</filter_attribute_code_mode>
            </filter_attribute>
            <category>
                <is_active>1</is_active>
                <include_in_menu>1</include_in_menu>
                <is_anchor>1</is_anchor>
            </category>
            <advanced>
                <advanced_log>0</advanced_log>
            </advanced>
        </akeneo_connector>
    </default>
</config>
